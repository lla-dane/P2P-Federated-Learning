{
  "name": "desktop-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "description": "A Web3-powered desktop app built with Electron.",
  "author": "Karan Kumar Das",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.app.json",
    "dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
    "dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@hashgraph/hedera-wallet-connect": "^1.5.1",
    "@hashgraph/proto": "^2.23.0",
    "@hashgraph/sdk": "^2.73.2",
    "@headlessui/react": "^2.2.8",
    "@tailwindcss/vite": "^4.1.13",
    "@walletconnect/core": "^2.21.9",
    "@walletconnect/modal": "^2.7.0",
    "@walletconnect/qrcode-modal": "^1.8.0",
    "@walletconnect/sign-client": "^2.21.9",
    "@walletconnect/types": "^2.21.9",
    "@walletconnect/utils": "^2.21.9",
    "@walletconnect/web3wallet": "^1.16.1",
    "axios": "^1.12.2",
    "electron-store": "^10.1.0",
    "ethers": "^6.15.0",
    "events": "^3.3.0",
    "form-data": "^4.0.4",
    "framer-motion": "^12.23.16",
    "keytar": "^7.9.0",
    "lucide-react": "^0.544.0",
    "os-utils": "^0.0.14",
    "pinata": "^2.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.13",
    "vite-plugin-electron": "^0.29.0",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "cross-env": "^10.0.0",
    "electron-builder": "^26.0.12",
    "electron": "^38.1.2",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  // "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
